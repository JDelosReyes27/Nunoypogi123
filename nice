<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h3 class="text-center">Login</h3>
        <div id="alert" class="alert d-none"></div>
        <form id="loginform" onsubmit="validateForm(event)">
            <div class="mb-3">
                <label for="username">Username</label>
                <input type="text" id="username" class="form-control" placeholder="Enter your Username">
            </div>
            <div class="mb-3">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control" placeholder="Enter your Password">
            </div>
            <button type="submit" class="btn btn-outline-primary w-100">Login</button>
        </form>
    </div>
    <script>
        function validateForm(event){
            event.preventDefault();
            const username = document.getElementById("username").value.trim();
            const password = document.getElementById("password").value.trim();
            const alertDiv = document.getElementById("alert");
            alertDiv.className = "alert d-none";
            alertDiv.innerText = "";
            if(username === "" || password === "") {
                alertDiv.classList.remove("d-none", "alert-success");
                alertDiv.classList.add("alert-danger");
                alertDiv.innerText= "Username and Password are Required";
                return;
            }
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%&])[A-Za-z\d@$!%&]{6,}$/;
            if (!passwordRegex.test(password)) {
                alertDiv.classList.remove("d-none", "alert-success");
                alertDiv.classList.add("alert-danger");
                let errorMessage = "Password must have:" +
                                "\n- Minimum 6 Characters" +
                                "\n- At least one lowercase character" +
                                "\n- At least one UPPERCASE character" +
                                "\n- At least one digit/number character" +
                                "\n- At least one special character";
                alertDiv.innerText = errorMessage;
                return;
            }
            alertDiv.classList.remove("d-none","alert-danger");
            alertDiv.classList.add("alert-success");
            alertDiv.innerText = "Login Successful";
            setTimeout(() => {
                document.getElementById("loginform").submit();
            }, 1500);
        }
    </script>
</body>
